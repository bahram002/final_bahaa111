<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"

        android:layout_weight="0.9"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="اضافة طالب "
            android:textColor="@color/black"
            android:textSize="30sp" />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="   الاسم الأول"

            android:paddingRight="10dp"
            android:textSize="20sp"

            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="   اسم العائلة"

            android:paddingRight="10dp"
            android:textSize="20sp"

            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="   تاريخ الميلاد"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/date"
            android:textSize="20sp"
                android:paddingLeft="20dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#C3C3C3"
        android:padding="20dp"
        android:orientation="vertical"

        android:layout_weight="1.1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/empty_button"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قواعد بيانات"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="225dp"
                android:textColor="@color/black"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/empty_button"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="برمجة شيئية"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="225dp"
                android:textColor="@color/black"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/empty_button"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جافا"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="286dp"
                android:textColor="@color/black"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/empty_button"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تطوير تطبيقات 1"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="195dp"
                android:textColor="@color/black"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/empty_button"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تطوير تطبيقات 2"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="195dp"
                android:textColor="@color/black"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="10dp"
            android:text="اضافة"
            android:textSize="25dp" />
    </LinearLayout>





</LinearLayout>